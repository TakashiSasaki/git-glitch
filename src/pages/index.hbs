<html>
  <head>
    <title>webauthn-fastify</title>
    <style>
      body {margin: 0px} iframe {margin:0px; padding 0px; width:100vw;
      height:100vw; border:none; }
    </style>
  </head>
  <body class="mdc-typography">
    <header>
      <nav>
        <div>
          <span>Client side</span>
          <button
            value="client-side-check.html"
            onclick="setIframeSrc(this)"
          >client-side-check</button>
        </div>
        <div>
          <span>Server side</span>
          <button
            value="generateRegistrationOptions"
            onclick="setIframeSrc(this)"
          >
            generateRegistrationOptions
          </button>
          <button
            value="generateAuthenticationOptions"
            onclick="setIframeSrc(this)"
          >
            generateAuthenticationOptions
          </button>
        </div>

      </nav>
      <script>
        function setIframeSrc(button){
        document.querySelector("iframe").setAttribute("src", button.value); }</script>
    </header>
    <main>
      <iframe src="client-side-check.html">

      </iframe>
    </main>
    <footer>
    </footer>
  </body>
</html>